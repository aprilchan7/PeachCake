/* pages/news/news.wxss */
page {
  height: 100%;
  background-color: #F4F4F4;
}
.tab {
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  height: 100rpx;
  font-size: 27rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
  background-color: white;
}

.isActive {
  color: #F5B43E;
  border-bottom: 2px solid #F5B43E;
  padding-bottom: 20rpx;
}
.newsBox{
  padding: 20rpx;
  margin-top: 20rpx;
  background-color: white;
}
.smallNewsBox{
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 0 10rpx 0;
  justify-content: space-around;
  border-bottom: 1px solid #EEEEEE;
}
.newsImg{
  width: 82px;
  height: 62px;
}
.leftBox{
  width: 70%;
}
.title{
  font-size: 14px;
  width: 100%;
  color: #353535;
  margin:0 0 20rpx 0;
}
.time{
  font-size: 12px;
  width: 100%;
  color: #666666;
  margin:20rpx 0 20rpx 0;
}
.read{
  margin-left: 10rpx;
}
.bottom{
  color: #B9B9B9;
  font-size: 12px;
  text-align: center;
  width:100%;
  height: 60rpx;
  line-height: 60rpx;
}