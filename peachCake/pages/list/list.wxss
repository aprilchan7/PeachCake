/* pages/list/list.wxss */
.bg{
  background-color: #F4F4F4;
}
.swiper{
  width: 100%;
  height:180px;
}
.img{
  width: 100%;
  height:180px;
}
.listS{
  height:180px;
  width: 375px;
}
.fontColor{
  color: #666666;
}
.drink{
  text-align: center;
  height:120rpx;
  background-color: white;
  line-height: 120rpx;
  border-bottom: 1px solid #F0F0F0;
  margin-top: 20rpx;
}
.drinkBox{
display: flex;
justify-content: space-around;
background-color: white;
height: 170px;
padding: 30rpx 20rpx 30rpx 20rpx;
}
.smallBox{
  width:45%;
  height:168px;
}
.bigImg{
  width: 100%;
  height: 168px;
  border-radius: 5px;
}
.smallImg{
  width: 100%;
  height: 82px;
  border-radius: 5px;
}
.cake{
  margin-top: 20rpx;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  height: 230px;
  padding: 30rpx 20rpx 30rpx 20rpx;
  background-color: white;
}
.cakeSize{
  width: 45%;
  height: 108px;
  border-radius: 5px;
}
.scroll-view-item{
  display: inline-block;
  width: 40%;
  height: 300rpx;
}
.scroll-view_two{
  white-space: nowrap;
  display: flex;
  width: 100%;
  justify-content: space-around;
  background-color: white;
  padding: 30rpx;
}
.salad{
  width: 134px;
  height: 99px;
}
.bottom{
  color: #B9B9B9;
  font-size: 12px;
  text-align: center;
  width:100%;
  height: 60rpx;
  line-height: 60rpx;
}